<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment">

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="729dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">

        <TextView
            android:id="@+id/homeTop"
            android:layout_width="match_parent"
            android:layout_height="159dp"
            android:text="@string/home_top_text" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="195dp"
            android:src="@drawable/common_google_signin_btn_text_dark_focused" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/button"
                    android:layout_width="113dp"
                    android:layout_height="92dp"
                    android:text="@string/home_button_pokedex" />

                <Button
                    android:id="@+id/button2"
                    android:layout_width="wrap_content"
                    android:layout_height="92dp"
                    android:text="@string/home_button_play" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="156dp">

                <ImageButton
                    android:id="@+id/imageButton"
                    android:layout_width="197dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_home_group" />

                <ImageButton
                    android:id="@+id/imageButton2"
                    android:layout_width="204dp"
                    android:layout_height="118dp"
                    android:src="@drawable/ic_home_andy" />
            </TableRow>

        </TableLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>