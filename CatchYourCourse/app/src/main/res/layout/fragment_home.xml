<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment">

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="729dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/homeTop"
            android:layout_width="match_parent"
            android:layout_height="159dp"
            android:text="@string/home_top_text" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="195dp"
            android:src="@drawable/common_google_signin_btn_text_dark_focused" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/home_pokedex"
                    android:layout_width="113dp"
                    android:layout_height="92dp"
                    android:backgroundTint="@color/colorPokedex"
                    android:fontFamily="@font/give_you_glory"
                    android:text="@string/home_button_pokedex"
                    android:textColor="#000000"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/home_play"
                    android:layout_width="113dp"
                    android:layout_height="92dp"
                    android:backgroundTint="#000000"
                    android:fontFamily="@font/give_you_glory"
                    android:shadowColor="#41FFDF"
                    android:text="@string/home_button_play"
                    android:textColor="#F4FF0E"
                    android:textSize="24sp"
                    android:textStyle="bold" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="156dp">

                <ImageButton
                    android:id="@+id/imageButton"
                    android:layout_width="204dp"
                    android:layout_height="204dp"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/ic_home_bag" />

                <ImageButton
                    android:id="@+id/imageButton2"
                    android:layout_width="204dp"
                    android:layout_height="204dp"
                    android:scaleType="fitCenter"
                    android:src="@mipmap/ic_home_item" />
            </TableRow>

        </TableLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>